          "plugin": {
            "kind": "TimeSeriesChart",
            "spec": {
              "legend": {
                "mode": "table",
                "position": "right",
                "size": "small",
                "values": [
                  "last"
                ]
              },
              "visual": {
                "areaOpacity": 0,
                "connectNulls": false,
                "lineWidth": 1.25,
                "pointRadius": 2.75
              }
            }
          },
          "queries": [
            {
              "kind": "TimeSeriesQuery",
              "spec": {
                "plugin": {
                  "kind": "PrometheusTimeSeriesQuery",
                  "spec": {
                    "query": "topk(\n  10, avg(disk_temperature_celsius{node=~\"$node\"}) by (node)\n)",
                    "seriesNameFormat": "{{ node }}"
                  }
                }
              }
            }
          ]
        }
